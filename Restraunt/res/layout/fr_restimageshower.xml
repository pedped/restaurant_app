<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context="com.edspace.restraunt.AC_MenuItem" >

    <ImageView
        android:id="@+id/fr_restimageshower_img_MenuItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="12dp" >

        <com.edspace.restraunt.CustomTextView
            android:id="@+id/fr_restimageshower__txt_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نام منو"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff" />

        <com.edspace.restraunt.CustomTextView
            android:id="@+id/fr_restimageshower__txt_Description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="توضیحات"
            android:textColor="#fff" />

    </LinearLayout>

</LinearLayout>